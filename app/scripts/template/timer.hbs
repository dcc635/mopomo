<div id="timer-input">
    <form class="form-inline" action="/#">
        <fieldset>
            <input id="hours" type="text" class="clock-input focused" placeholder="00" maxlength="2" pattern="[0-9]*" onclick="this.select()"></input>
            <input id="minutes" type="text" class="clock-input focused" placeholder="00" maxlength="2" pattern="[0-9]*" onclick="this.select()"></input>
            <input id="seconds" type="text" class="clock-input focused" placeholder="00" maxlength="2" pattern="[0-9]*" onclick="this.select()"></input> <button id="start-pause" type="button" class="btn btn-primary btn-large">Start</button>
            <button id="reset" type="button" class="btn btn-info btn-large">Reset</button>
        </fieldset>
    </form>
</div>
<div id="timer-output">
    <div id="output-text">{{hours}}:{{minutes}}:{{seconds}}</div>
    <div id="millisecond-animation"></div>
</div>
<div id="tally">Pomodoros: {{ tally }}</div>